<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true"
    tools:context=".activity.TransactionProgressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Transaction Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_transaction_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Transaction Type -->
                    <TextView
                        android:id="@+id/tv_transaction_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sale Transaction"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        tools:text="Sale Transaction" />

                    <!-- Amount Display -->
                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$100.00"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        tools:text="$100.00" />

                    <!-- Order Information -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_edittext"
                        android:padding="16dp">

                        <!-- Order ID -->
                        <LinearLayout
                            android:id="@+id/layout_order_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:text="Order ID"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start" />

                            <TextView
                                android:id="@+id/tv_order_id"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:text="ORD-12345"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end"
                                android:maxLines="1"
                                android:scrollHorizontally="true"
                                tools:text="ORD-12345" />

                        </LinearLayout>

                        <!-- Request ID -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:text="Request ID"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start" />

                            <TextView
                                android:id="@+id/tv_request_id"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:text="REQ-67890"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end"
                                android:maxLines="1"
                                android:scrollHorizontally="true"
                                tools:text="REQ-67890" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Additional Amounts Layout (dynamically populated) -->
                    <LinearLayout
                        android:id="@+id/layout_additional_amounts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Additional Amounts"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="12dp" />

                        <!-- Additional amounts will be added dynamically here -->

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Progress Status Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/purple_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <!-- Progress Indicator -->
                    <ProgressBar
                        android:id="@+id/progress_indicator"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="24dp"
                        android:indeterminateTint="@color/colorPrimary" />

                    <!-- Status Text -->
                    <TextView
                        android:id="@+id/tv_progress_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Processing"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"
                        tools:text="Processing" />

                    <!-- Message Text -->
                    <TextView
                        android:id="@+id/tv_progress_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please wait while we process your transaction..."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        tools:text="Please wait while we process your transaction..." />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Result Card (initially hidden) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@android:color/white"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <!-- Result Icon -->
                    <ImageView
                        android:id="@+id/iv_result_icon"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="#4CAF50"
                        tools:src="@drawable/ic_check_circle" />

                    <!-- Result Text -->
                    <TextView
                        android:id="@+id/tv_result_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transaction Successful"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp"
                        tools:text="Transaction Successful" />

                    <!-- Result Details Container -->
                    <LinearLayout
                        android:id="@+id/layout_result_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_edittext"
                        android:padding="16dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <!-- Transaction ID -->
                        <LinearLayout
                            android:id="@+id/layout_transaction_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/tv_label_transaction_id"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Transaction ID"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start" />

                            <TextView
                                android:id="@+id/tv_detail_transaction_id"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="7126019850090037"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end"
                                tools:text="7126019850090037" />

                        </LinearLayout>

                        <!-- Auth Code -->
                        <LinearLayout
                            android:id="@+id/layout_auth_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/tv_label_auth_code"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Auth Code"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start" />

                            <TextView
                                android:id="@+id/tv_detail_auth_code"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TAS362"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end"
                                tools:text="TAS362" />

                        </LinearLayout>

                        <!-- Completed Time -->
                        <LinearLayout
                            android:id="@+id/layout_completed_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/tv_label_completed_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Completed"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start" />

                            <TextView
                                android:id="@+id/tv_detail_completed_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2026-01-09 00:50:34"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end"
                                tools:text="2026-01-09 00:50:34" />

                        </LinearLayout>

                        <!-- Amount -->
                        <LinearLayout
                            android:id="@+id/layout_result_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/tv_label_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Amount"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start" />

                            <TextView
                                android:id="@+id/tv_detail_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="$2.50"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end"
                                tools:text="$2.50" />

                        </LinearLayout>

                        <!-- Message -->
                        <LinearLayout
                            android:id="@+id/layout_result_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/tv_label_message"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Message"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start" />

                            <TextView
                                android:id="@+id/tv_detail_message"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="success"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end"
                                tools:text="success" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bottom Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@android:color/white"
            android:elevation="8dp">

            <!-- Abort Button (shown during processing) -->
            <Button
                android:id="@+id/btn_abort"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:text="Abort Transaction"
                android:textColor="#F44336"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/button_rounded_white"
                android:stateListAnimator="@null" />

            <!-- Retry Button (shown on failure) -->
            <Button
                android:id="@+id/btn_retry"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:text="Retry"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/button_rounded_white"
                android:visibility="gone"
                android:stateListAnimator="@null" />

            <!-- Query Button (shown on completion or failure) -->
            <Button
                android:id="@+id/btn_query"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Query"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:stateListAnimator="@null"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>