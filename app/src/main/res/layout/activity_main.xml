<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Modern Top Bar with Gradient -->
    <LinearLayout
        android:id="@+id/layout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/colorPrimary"
        android:elevation="8dp">

        <!-- Connection Status with Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Status Indicator -->
            <View
                android:id="@+id/status_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/status_indicator_connected"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_connection_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connection_mode_label"
                    android:textColor="#E0FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_connection_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.0.0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Modern Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_rounded_white"
            android:padding="2dp">

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Settings"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:background="@android:color/transparent"
                android:minWidth="60dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded_white"
            android:padding="2dp">

            <Button
                android:id="@+id/btn_transaction_history"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="History"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:background="@android:color/transparent"
                android:minWidth="60dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

    <!-- Modern Product Selection Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- Enhanced Product Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="32dp">

            <!-- Coffee Card -->
            <LinearLayout
                android:id="@+id/btn_product_coffee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/card_background_clickable"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜•"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Coffee\n$3.50"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    />

            </LinearLayout>

            <!-- Apple Card -->
            <LinearLayout
                android:id="@+id/btn_product_sandwich"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/card_background_clickable"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥ª"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Sandwich\n$8.99"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    />

            </LinearLayout>

            <!-- Cola Card -->
            <LinearLayout
                android:id="@+id/btn_product_lunch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/card_background_clickable"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥¤"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Cola\n$2.50"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    />

            </LinearLayout>

            <!-- Hot Dog Card -->
            <LinearLayout
                android:id="@+id/btn_product_dinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/card_background_clickable"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ­"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Hot Dog\n$6.50"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    />

            </LinearLayout>

        </GridLayout>

        <!-- Enhanced Amount Input with Total Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/card_background_purple_light"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="24dp">


            <!-- Total Amount Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center" />

            <!-- Amount Input Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/et_custom_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#9E9E9E"
                    android:fontFamily="sans-serif-medium"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    android:gravity="start|center_vertical" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Modern Transaction Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#F8F9FA">

        <!-- Primary SALE Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background_primary"
            android:elevation="4dp">

            <Button
                android:id="@+id/btn_sale"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ðŸ’³ PROCESS PAYMENT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:stateListAnimator="@null" />

        </LinearLayout>

        <!-- Secondary Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <!-- AUTH Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/card_background_white"
                android:elevation="2dp">

                <Button
                    android:id="@+id/btn_auth"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ”’ AUTH"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:stateListAnimator="@null" />

            </LinearLayout>

            <!-- FORCED AUTH Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/card_background_white"
                android:elevation="2dp">

                <Button
                    android:id="@+id/btn_forced_auth"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="âš¡ FORCED AUTH"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:stateListAnimator="@null" />

            </LinearLayout>

        </LinearLayout>

        <!-- Enhanced Payment Status Display -->
        <LinearLayout
            android:id="@+id/card_payment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/card_background_purple_light"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">

            <ProgressBar
                android:id="@+id/progress_payment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:indeterminateTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_payment_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</ScrollView>